{
  "name": "EmailWriter Extension",
  "description": "Base Level Extension",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://mail.google.com/*",
    "http://localhost:8080/*"
  ],
  "action": {
    "default_title": "Ai Email Writer"
  },
  "content_scripts": [
    {
      "js": [
        "content-script.js"
      ],
      "matches": [
        "*://mail.google.com/*"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "icons.png" ],
      "matches": [ "*://mail.google.com/*" ]
    }
  ]
}